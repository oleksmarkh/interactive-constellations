{
  "name": "interactive-constellations",
  "version": "0.0.0",
  "description": "an interactive visualization of gravitating particles",
  "main": "src/lib/index.ts",
  "repository": "git@github.com:oleksmarkh/interactive-constellations.git",
  "author": "Oleksii Markhovskyi",
  "license": "MIT",
  "scripts": {
    "lint": "tslint ./src/{**,**/__tests__}/*.ts",
    "test": "NODE_PATH=./src jest",
    "clean": "rm -rf ./dist/*",
    "precommit": "yarn lint && yarn test",
    "prebuild:dev": "yarn clean",
    "prebuild:prod": "yarn clean",
    "run:dev": "export NODE_ENV=development PUBLIC_PATH=/ && webpack-dev-server",
    "build:dev": "export NODE_ENV=development PUBLIC_PATH=/ && webpack --progress --bail",
    "build:prod": "export NODE_ENV=production PUBLIC_PATH=https://oleksmarkh.github.io/interactive-constellations/ && webpack --progress --bail",
    "deploy": "gh-pages -d dist"
  },
  "devDependencies": {
    "@types/jest": "22.1.3",
    "@types/lodash": "4.14.104",
    "@types/stats.js": "0.17.0",
    "@types/three": "0.89.10",
    "awesome-typescript-loader": "3.5.0",
    "babel-core": "6.26.0",
    "babel-preset-env": "1.6.1",
    "gh-pages": "1.1.0",
    "html-webpack-plugin": "2.30.1",
    "husky": "0.14.3",
    "jest": "22.4.2",
    "ts-jest": "22.4.0",
    "tslint": "5.9.1",
    "tslint-eslint-rules": "5.1.0",
    "tslint-loader": "3.5.3",
    "typescript": "2.7.2",
    "webpack": "3.11.0",
    "webpack-dev-server": "2.11.1"
  },
  "dependencies": {
    "lodash": "4.17.5",
    "stats.js": "0.17.0",
    "three": "0.90.0"
  }
}
